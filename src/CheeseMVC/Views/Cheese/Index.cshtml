@model IList<CheeseMVC.Models.Cheese>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
        <th></th>
    </tr>

    @foreach (var cheese in Model)
    {
    <tr>
        <td>@cheese.Name</td>
        <td>@cheese.Description</td>
        <td>@cheese.Category.Name</td>
        <td><a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseId="@cheese.ID">Edit</a></td>

    </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}
    <div>
        <td>@Html.ActionLink("Add", "Add", "Cheese")</td> |
        <td>@Html.ActionLink("Remove", "Remove", "Cheese")</td>
    </div>
    
    
   